# WhatsApp Multi-Session Manager - Environment Configuration
# Copy this file to .env and customize the values as needed

#############################################
# APPLICATION CONFIGURATION
#############################################

# Server port (default: 8080)
PORT=8080

# JWT secret key for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345

# Application mode: debug, release, or test
GIN_MODE=release

#############################################
# DATABASE CONFIGURATION
#############################################

# Path to SQLite database file (relative to container /app/data directory)
DATABASE_PATH=/app/data/session_metadata.db

# WhatsApp sessions database path
WHATSAPP_DB_PATH=/app/data/sessions.db

#############################################
# DIRECTORY CONFIGURATION
#############################################

# Local directories that will be mounted as volumes
# These paths are relative to docker-compose.yml location

# Main data directory (contains databases)
DATA_DIR=./whatsapp

# WhatsApp sessions directory
WHATSAPP_DIR=./whatsapp/sessions

# Application logs directory
LOGS_DIR=./whatsapp/logs

# Optional configuration directory
CONFIG_DIR=./config

#############################################
# DEFAULT ADMIN USER
#############################################

# Default admin username
ADMIN_USERNAME=admin

# Default admin password (CHANGE THIS IN PRODUCTION!)
ADMIN_PASSWORD=admin123

#############################################
# APPLICATION SETTINGS
#############################################

# JWT token expiration time (examples: 24h, 7d, 30m)
SESSION_TIMEOUT=24h

# Maximum number of WhatsApp sessions allowed
MAX_SESSIONS=10

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Auto-connect restored sessions on startup
AUTO_CONNECT=true

#############################################
# SECURITY SETTINGS
#############################################

# CORS allowed origins for WebSocket connections (comma-separated, * for all)
# For production, specify your domain(s):
# CORS_ALLOWED_ORIGINS=http://yourdomain.com:18080,https://yourdomain.com:18080
# For development, use localhost:
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# For all origins (NOT recommended for production):
CORS_ALLOWED_ORIGINS=*

# Rate limiting: requests per minute per IP
RATE_LIMIT=100

#############################################
# WEBHOOK CONFIGURATION
#############################################

# Default webhook timeout in seconds
WEBHOOK_TIMEOUT=30

# Maximum webhook retry attempts
WEBHOOK_MAX_RETRIES=3

#############################################
# WHATSAPP SPECIFIC SETTINGS
#############################################

# Enable QR code refresh interval (seconds)
QR_REFRESH_INTERVAL=30

# Message sending timeout (seconds)
MESSAGE_TIMEOUT=30

# Auto-disconnect inactive sessions after (hours)
AUTO_DISCONNECT_HOURS=24

#############################################
# DOCKER SPECIFIC SETTINGS
#############################################

# Container memory limit
MEMORY_LIMIT=512M

# Container CPU limit
CPU_LIMIT=1.0

# Log file settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

#############################################
# DEVELOPMENT SETTINGS
#############################################

# Enable debug mode (shows more detailed logs)
DEBUG=false

# Enable API documentation endpoint
ENABLE_DOCS=true

# Enable metrics endpoint
ENABLE_METRICS=false

#############################################
# BACKUP SETTINGS
#############################################

# Enable automatic database backups
ENABLE_BACKUP=true

# Backup interval in hours
BACKUP_INTERVAL=24

# Number of backup files to keep
BACKUP_RETENTION=7